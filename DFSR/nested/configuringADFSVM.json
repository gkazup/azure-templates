{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "VMName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string"
    },
    "sharePath": {
      "type": "string"
    },
    "ConfigurationModulesURL": {
      "type": "string"
    },
    "ConfigurationFunction": {
      "type": "string"
    },
    "DNSServer": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('VMName'), copyindex(1),'/ConfigureFSServer')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "copy": {
        "name": "fsConfigLoop",
        "count": 2
      },
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.13",
        "autoUpgradeMinorVersion": false,
        "settings": {
          "modulesURL": "[parameters('ConfigurationModulesURL')]",
          "wmfVersion": "4.0",
          "configurationFunction": "[parameters('ConfigurationFunction')]",
          "properties": {
            "DNSServer": "[parameters('DNSServer')]",
            "SharePath": "[concat(parameters('sharePath'),copyindex(1))]",
            "domainName": "[parameters('domainName')]",
            "adminCreds": {
              "userName": "[parameters('adminUserName')]",
              "password": "privateSettingsRef:adminPassword"
            }

          }
        },
        "protectedSettings": {
          "items": {
            "adminPassword": "[parameters('adminPassword')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
